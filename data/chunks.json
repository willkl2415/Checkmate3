# app.py

import os
import json
from flask import Flask, render_template, request
from answer_engine import get_answer

app = Flask(__name__)

# Load chunks from JSON
with open("data/chunks.json", "r", encoding="utf-8") as f:
    chunks_data = json.load(f)

# Prepare document list from chunks
documents = sorted(set(chunk["document"] for chunk in chunks_data if "document" in chunk))

@app.route("/", methods=["GET", "POST"])
def index():
    question = ""
    refine_query = ""
    selected_doc = None
    answer = []

    if request.method == "POST":
        if request.form.get("clear"):
            return render_template("index.html", question="", documents=documents, selected_doc="", refine_query="", answer=[])
        
        question = request.form.get("question", "").strip()
        refine_query = request.form.get("refine_query", "").strip()
        selected_doc = request.form.get("document", None)

        filters = {
            "document": selected_doc if selected_doc and selected_doc != "All Documents" else None
        }

        answer = get_answer(question, filters)

        if refine_query:
            refine_query_lower = refine_query.lower()
            answer = [chunk for chunk in answer if refine_query_lower in chunk["content"].lower()]

    return render_template("index.html", question=question, documents=["All Documents"] + documents, selected_doc=selected_doc, refine_query=refine_query, answer=answer)

if __name__ == "__main__":
    app.run(debug=True)
